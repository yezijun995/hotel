<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.fdzc.hotel.wineshop.mapper.HotelRoomMapper">

    <resultMap type="HotelRoom" id="HotelRoomResult">
        <result property="roomId" column="room_id"/>
        <result property="number" column="number"/>
        <result property="typeId" column="type_id"/>
        <result property="hotelId" column="hotel_id"/>
        <result property="typeName" column="type_name"/>
        <result property="hotelName" column="hotel_name"/>
        <result property="price" column="price"/>
        <result property="discount" column="discount"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

    <sql id="selectHotelRoomVo">
        select room_id, number, type_id, hotel_id, type_name, hotel_name, price, discount, create_by, create_time, update_by, update_time, status, remark, del_flag from hotel_room
    </sql>

    <select id="selectHotelRoomList" parameterType="HotelRoom" resultMap="HotelRoomResult">
        select hr.room_id, hr.number, hr.type_id, hr.hotel_id, hrt.type_name, hw.name, hr.price, hr.discount,
        hr.create_by, hr.create_time, hr.update_by, hr.update_time, hr.status, hr.remark, hr.del_flag
        from hotel_room_type hrt join hotel_room hr on hr.type_id = hrt.room_type_id join hotel_wineshop hw on
        hw.hotel_id = hr.hotel_id
        <where>
            <if test="hotelId != null">and hr.hotel_id = #{hotelId}</if>
            <if test="number != null  and number != ''">and number like concat('%', #{number}, '%')</if>
            <if test="typeName != null  and typeName != ''">and type_name = #{typeName}</if>
            <if test="price != null ">and price = #{price}</if>
            <if test="discount != null ">and discount = #{discount}</if>
            <if test="status != null  and status != ''">and status = #{status}</if>
        </where>
    </select>

    <select id="selectHotelRoomById" parameterType="Long" resultMap="HotelRoomResult">
        <include refid="selectHotelRoomVo"/>
        where room_id = #{roomId}
    </select>

    <insert id="insertHotelRoom" parameterType="HotelRoom" useGeneratedKeys="true" keyProperty="roomId">
        insert into hotel_room
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="number != null and number != ''">number,</if>
            <if test="typeId != null">type_id,</if>
            <if test="hotelId != null">hotel_id,</if>
            <if test="typeName != null and typeName != ''">type_name,</if>
            <if test="hotelName != null">hotel_name,</if>
            <if test="price != null">price,</if>
            <if test="discount != null">discount,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="number != null and number != ''">#{number},</if>
            <if test="typeId != null">#{typeId},</if>
            <if test="hotelId != null">#{hotelId},</if>
            <if test="typeName != null and typeName != ''">#{typeName},</if>
            <if test="hotelName != null">#{hotelName},</if>
            <if test="price != null">#{price},</if>
            <if test="discount != null">#{discount},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
        </trim>
    </insert>

    <update id="updateHotelRoom" parameterType="HotelRoom">
        update hotel_room
        <trim prefix="SET" suffixOverrides=",">
            <if test="number != null and number != ''">number = #{number},</if>
            <if test="typeId != null">type_id = #{typeId},</if>
            <if test="hotelId != null">hotel_id = #{hotelId},</if>
            <if test="typeName != null and typeName != ''">type_name = #{typeName},</if>
            <if test="hotelName != null">hotel_name = #{hotelName},</if>
            <if test="price != null">price = #{price},</if>
            <if test="discount != null">discount = #{discount},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where room_id = #{roomId}
    </update>

    <delete id="deleteHotelRoomById" parameterType="Long">
        delete from hotel_room where room_id = #{roomId}
    </delete>

    <delete id="deleteHotelRoomByIds" parameterType="String">
        delete from hotel_room where room_id in
        <foreach item="roomId" collection="array" open="(" separator="," close=")">
            #{roomId}
        </foreach>
    </delete>

    <select id="checkRoomNameUnique" resultType="int">
		select count(1) from hotel_room where hotel_id = #{hotelId} and number = #{number} limit 1
	</select>

    <select id="selectHotelRoomByTypeId" parameterType="Long" resultMap="HotelRoomResult">
        <include refid="selectHotelRoomVo"/>
        where type_id = #{typeId} and status = 1
    </select>
</mapper>