<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.fdzc.hotel.mapper.WorkerRoleMapper">

    <resultMap type="edu.fdzc.hotel.po.WorkerRole" id="WorkerRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="workerId" column="worker_id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="WorkerRoleMap">
        select
          id, worker_id, role_id
        from hotel_dev.worker_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="WorkerRoleMap">
        select
          id, worker_id, role_id
        from hotel_dev.worker_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="WorkerRoleMap">
        select
        id, worker_id, role_id
        from hotel_dev.worker_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="workerId != null">
                and worker_id = #{workerId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into hotel_dev.worker_role(worker_id, role_id)
        values (#{workerId}, #{roleId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into hotel_dev.worker_role(worker_id, role_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.workerId}, #{entity.roleId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into hotel_dev.worker_role(worker_id, role_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.workerId}, #{entity.roleId})
        </foreach>
        on duplicate key update
        worker_id = values(worker_id) , role_id = values(role_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update hotel_dev.worker_role
        <set>
            <if test="workerId != null">
                worker_id = #{workerId},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from hotel_dev.worker_role where id = #{id}
    </delete>

</mapper>

