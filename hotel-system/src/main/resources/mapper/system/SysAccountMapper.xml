<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.fdzc.hotel.system.mapper.SysAccountMapper">
    
    <resultMap type="SysAccount" id="SysAccountResult">
        <result property="accountId"    column="account_id"    />
        <result property="accountName"    column="account_name"    />
        <result property="password"    column="password"    />
        <result property="nickname"    column="nickname"    />
        <result property="realName"    column="real_name"    />
        <result property="birth"    column="birth"    />
        <result property="sign"    column="sign"    />
        <result property="icon"    column="icon"    />
        <result property="gender"    column="gender"    />
        <result property="phone"    column="phone"    />
        <result property="email"    column="email"    />
        <result property="address"    column="address"    />
        <result property="idCard"    column="id_card"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectSysAccountVo">
        select account_id, account_name, password, nickname, real_name, birth, sign, icon, gender, phone, email, address, id_card, create_by, create_time, update_by, update_time, status, remark, del_flag from sys_account
    </sql>

    <select id="selectSysAccountList" parameterType="SysAccount" resultMap="SysAccountResult">
        <include refid="selectSysAccountVo"/>
        <where>  
            <if test="accountName != null  and accountName != ''"> and account_name like concat('%', #{accountName}, '%')</if>
            <if test="password != null  and password != ''"> and password = #{password}</if>
            <if test="nickname != null  and nickname != ''"> and nickname like concat('%', #{nickname}, '%')</if>
            <if test="realName != null  and realName != ''"> and real_name like concat('%', #{realName}, '%')</if>
            <if test="birth != null  and birth != ''"> and birth = #{birth}</if>
            <if test="sign != null  and sign != ''"> and sign = #{sign}</if>
            <if test="icon != null  and icon != ''"> and icon = #{icon}</if>
            <if test="gender != null  and gender != ''"> and gender = #{gender}</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="email != null  and email != ''"> and email = #{email}</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
            <if test="idCard != null  and idCard != ''"> and id_card = #{idCard}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectSysAccountById" parameterType="Long" resultMap="SysAccountResult">
        <include refid="selectSysAccountVo"/>
        where account_id = #{accountId}
    </select>

    <select id="selectAccountByAccountName" parameterType="String" resultMap="SysAccountResult">
        <include refid="selectSysAccountVo"/>
        where account_name = #{accountName}
    </select>
        
    <insert id="insertSysAccount" parameterType="SysAccount" useGeneratedKeys="true" keyProperty="accountId">
        insert into sys_account
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="accountName != null">account_name,</if>
            <if test="password != null">password,</if>
            <if test="nickname != null">nickname,</if>
            <if test="realName != null">real_name,</if>
            <if test="birth != null">birth,</if>
            <if test="sign != null">sign,</if>
            <if test="icon != null">icon,</if>
            <if test="gender != null">gender,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
            <if test="address != null">address,</if>
            <if test="idCard != null">id_card,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="accountName != null">#{accountName},</if>
            <if test="password != null">#{password},</if>
            <if test="nickname != null">#{nickname},</if>
            <if test="realName != null">#{realName},</if>
            <if test="birth != null">#{birth},</if>
            <if test="sign != null">#{sign},</if>
            <if test="icon != null">#{icon},</if>
            <if test="gender != null">#{gender},</if>
            <if test="phone != null">#{phone},</if>
            <if test="email != null">#{email},</if>
            <if test="address != null">#{address},</if>
            <if test="idCard != null">#{idCard},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateSysAccount" parameterType="SysAccount">
        update sys_account
        <trim prefix="SET" suffixOverrides=",">
            <if test="accountName != null">account_name = #{accountName},</if>
            <if test="password != null">password = #{password},</if>
            <if test="nickname != null">nickname = #{nickname},</if>
            <if test="realName != null">real_name = #{realName},</if>
            <if test="birth != null">birth = #{birth},</if>
            <if test="sign != null">sign = #{sign},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="address != null">address = #{address},</if>
            <if test="idCard != null">id_card = #{idCard},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where account_id = #{accountId}
    </update>

    <delete id="deleteSysAccountById" parameterType="Long">
        delete from sys_account where account_id = #{accountId}
    </delete>

    <delete id="deleteSysAccountByIds" parameterType="String">
        delete from sys_account where account_id in 
        <foreach item="accountId" collection="array" open="(" separator="," close=")">
            #{accountId}
        </foreach>
    </delete>

    <select id="checkAccountNameUnique" parameterType="String" resultType="int">
		select count(1) from sys_account where account_name = #{accountName} limit 1
	</select>

    <select id="checkPhoneUnique" parameterType="String" resultMap="SysAccountResult">
		select account_id, phone from sys_account where phone = #{phone} limit 1
	</select>

    <select id="checkEmailUnique" parameterType="String" resultMap="SysAccountResult">
		select account_id, email from sys_account where email = #{email} limit 1
	</select>
</mapper>